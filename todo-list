todo=[]
task_completed=[]
if len(todo)==0:
        print("Your to-do list is empty.")
else:
        print("Your to-do list:")
        
        for index, item in enumerate(todo, start=1):
            print(f"{index}. {item}")
        print(f"Total tasks: {len(todo)}")
while True:
        
        print("\nOptions:")
        print("1. Add a task")
        print("2. Remove a task")
        print("3. Mark a task as completed")
        print("4. View completed tasks")
        print("5. Exit")
        choice = input("Choose an option (1-5): ")
        if choice == "1":
            task = input("Enter the task to add: ")
            todo.append(task)
            print(f'Task "{task}" added to the list.')
        elif choice == "2":
              if len(todo) == 0:
                    print("Your to-do list is empty. No tasks to remove.")
                    continue
              else:
                    print("To-do list:")
              for index, item in enumerate(todo, start=1):
                    print(f"{index}. {item}")

              task_num = int(input("Enter the task number to remove: "))
              for index, item in enumerate(todo, start=1):
                  if index == task_num:
                      todo.remove(item)
                      print(f'Task "{item}" removed from the list.')
                      break
                  else:
                        print("Invalid task number.")
        elif choice == "3":
            if len(todo) == 0:
                print("Your to-do list is empty. No tasks to mark as completed.")
                continue
            else:
             print("To-do list:")
            
            for index, item in enumerate(todo, start=1):
                print(f"{index}. {item}")
            task_num = int(input("Enter the task number to mark as completed: "))
            for index, item in enumerate(todo, start=1):
                if index == task_num:
                    todo.remove(item)
                    task_completed.append(item)
                    print(f'Task "{item}" marked as completed.')
                    break
                else:
                    print("Invalid task number.")
        elif choice == "4":
             if len(task_completed) == 0:
                 print("No tasks have been completed yet.")
             else:
                    print("Completed tasks:")
                    for index, item in enumerate(task_completed, start=1):
                        print(f"{index}. {item}")
        elif choice == "5":
             print("Exiting the to-do list application. Goodbye!")
             break
              
        else: 
            print("Invalid choice. Please select a valid option (1-5)")       
        
            
        
                          
                        
            

    
    